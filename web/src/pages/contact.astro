---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact | CK-TOM">
    <section class="py-16 md:py-20">
        <h1 class="text-4xl font-bold tracking-tight text-neutral-900 mb-8">
            Contact
        </h1>
        <p class="text-lg text-neutral-600 mb-12 max-w-2xl">
            I'm always open to discussing new projects, opportunities, or just
            chatting about technology.
        </p>

        <div class="grid gap-8 max-w-lg">
            <div class="bg-neutral-50 p-6 rounded-lg border border-neutral-200">
                <h2 class="text-xl font-bold text-neutral-900 mb-4">Email</h2>
                <p class="text-neutral-600 mb-2">For general inquiries:</p>
                <a
                    href="mailto:hello@cktom.online"
                    class="text-neutral-900 font-medium hover:underline"
                    >hello@cktom.online</a
                >
            </div>

            <div class="bg-neutral-50 p-6 rounded-lg border border-neutral-200">
                <h2 class="text-xl font-bold text-neutral-900 mb-4">
                    Social Media
                </h2>
                <div class="flex flex-col gap-3">
                    <a
                        href="#"
                        class="flex items-center gap-3 text-neutral-600 hover:text-neutral-900 transition-colors"
                    >
                        <span class="font-medium">GitHub</span>
                        <span class="text-neutral-400 text-sm">@ck-tom</span>
                    </a>
                    <a
                        href="#"
                        class="flex items-center gap-3 text-neutral-600 hover:text-neutral-900 transition-colors"
                    >
                        <span class="font-medium">Twitter</span>
                        <span class="text-neutral-400 text-sm">@ck_tom</span>
                    </a>
                    <a
                        href="#"
                        class="flex items-center gap-3 text-neutral-600 hover:text-neutral-900 transition-colors"
                    >
                        <span class="font-medium">LinkedIn</span>
                        <span class="text-neutral-400 text-sm">/in/cktom</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
