---
import Layout from "../layouts/Layout.astro";
import { getEntry } from "astro:content";

const contact = await getEntry("contact", "index");
if (!contact) {
    throw new Error("Contact page data not found");
}
const { title, intro, email, socialLinks } = contact.data;
---

<Layout title={`${title} | CK-TOM`}>
    <section class="py-16 md:py-20">
        <h1 class="text-4xl font-bold tracking-tight text-neutral-900 mb-8">
            {title}
        </h1>
        <p class="text-lg text-neutral-600 mb-12 max-w-2xl">
            {intro}
        </p>

        <div class="grid gap-8 max-w-lg">
            <div class="bg-neutral-50 p-6 rounded-lg border border-neutral-200">
                <h2 class="text-xl font-bold text-neutral-900 mb-4">Email</h2>
                <p class="text-neutral-600 mb-2">Get in touch @</p>
                <a
                    href={`mailto:${email}`}
                    class="text-neutral-900 font-medium hover:underline"
                    >{email}</a
                >
            </div>

            <div class="bg-neutral-50 p-6 rounded-lg border border-neutral-200">
                <h2 class="text-xl font-bold text-neutral-900 mb-4">
                    Social Media
                </h2>
                <div class="flex flex-col gap-3">
                    {
                        socialLinks.map((link) => (
                            <a
                                href={link.url}
                                class="flex items-center gap-3 text-neutral-600 hover:text-neutral-900 transition-colors"
                            >
                                <span class="font-medium">{link.platform}</span>
                                <span class="text-neutral-400 text-sm">
                                    {link.handle}
                                </span>
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>
</Layout>
